from random import shuffle

pop = ["Resto", "Zerri", "Kacpre", "Klaudia", "Olicz", "Wariax", "Kasia"]

prev = {
    "Resto": "Klaudia",
    "Zerri": "Olicz", 
    "Kacpre": "Kasia", 
    "Klaudia": "Wariax", 
    "Olicz": "Zerri", 
    "Wariax": "Resto", 
    "Kasia": "Kacpre", 
    }

def generate_assingments(previous_assingments, coders):
    
    new_ass = dict(previous_assingments)
    shuffle(coders)
    i = 0
    
    
    for key, value in previous_assingments.items():
        if previous_assingments[key] != coders[i] and previous_assingments[value] != coders[i] and new_ass.items() != dict(map(reversed, new_ass.items())):   
            new_ass[key] = coders[i]
            i += 1


    print(new_ass)


generate_assingments(prev, pop)
